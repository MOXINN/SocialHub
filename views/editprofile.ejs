<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>Edit Profile</title>
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-[#18325a] to-[#253b63] flex items-center justify-center p-4">

  <!-- Edit Profile Form -->
  <form action="/upload/<%= user._id %>" method="POST" enctype="multipart/form-data" class="bg-[#243a63] bg-opacity-95 rounded-2xl shadow-2xl p-8 flex flex-col gap-6 w-[95vw] max-w-md">
    <h2 class="text-xl font-bold text-cyan-300 text-center">Edit Profile</h2>

    <!-- Profile Image Upload -->
    <div class="flex flex-col items-center gap-3">
      <img 
        src="/images/uploads/<%= user.profileImage %>" 
        alt="Profile Image" 
        class="w-24 h-24 rounded-full object-cover border-2 border-sky-400 shadow"
      />
      <input 
        type="file" 
        name="profileImage" 
        accept="image/*"
        class="block text-sm text-gray-300 file:mr-4 file:py-2 file:px-4 
               file:rounded-full file:border-0 
               file:text-sm file:font-semibold 
               file:bg-sky-500 file:text-white 
               hover:file:bg-sky-600 cursor-pointer"
      />
    </div>

    <!-- Username Field -->
    <div>
      <label for="username" class="block text-gray-200 mb-1">Username</label>
      <input 
        type="text" 
        id="username" 
        name="username" 
        value="<%= user.username %>" 
        class="w-full rounded-lg bg-[#1d2b47] border border-[#30529e40] text-gray-100 px-4 py-2 text-base focus:ring-2 focus:ring-sky-400 focus:outline-none transition"
      />
    </div>

    <!-- Email Field -->
    <div>
      <label for="email" class="block text-gray-200 mb-1">Email</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        value="<%= user.email %>" 
        class="w-full rounded-lg bg-[#1d2b47] border border-[#30529e40] text-gray-100 px-4 py-2 text-base focus:ring-2 focus:ring-sky-400 focus:outline-none transition"
      />
    </div>

    <!-- Save Changes Button -->
    <button 
      type="submit"
      class="w-full rounded-lg bg-gradient-to-r from-green-400 to-emerald-700 font-semibold text-white py-2 shadow hover:from-emerald-600 hover:to-green-400 transition"
      value="Upload File"
    >
      Save Profile
    </button>
  </form>

</body>
</html>
